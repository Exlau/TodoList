<scroll-view scroll-x="true" scroll-left="">
  <view class="Component">
    <view class="dayView {{activeIndex==index?'active':''}}" wx:for="{{dayList}}" data-index="{{index}}"
      bindtap="changeDay" wx:key="index">
      <view class="day">{{item.day}}</view>
      <view class="date">{{item.date}}</view>
    </view>
  </view>
</scroll-view>